---
import "../styles/global.css";
import { ViewTransitions } from "astro:transitions";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";

const { pageTitle } = Astro.props;
---

<html data-theme="dark" lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/ISD.svg" />
    <meta name="viewport" content="width=device-width" />
    <meta name="description" content="Blog about Geophysics and Programming" />
    <meta name="keywords" content="geophysics, programming, development, python, blog" />
    <meta name="author" content="Andre Albano" />
    <meta name="generator" content={Astro.generator} />
    <title>{pageTitle}</title>
    <ViewTransitions />
  </head>
  <body>
    <Header />

    <section class="section">
      <div class="container">
        <div class="content">
          <h1 class="is-size-1 has-text-centered has-text-weight-bold">
            {pageTitle}
          </h1>
          <hr />
          <slot />
        </div>
      </div>
    </section>

    <Footer />
  </body>
</html>
