---
import "../styles/global.css";
import { ViewTransitions } from "astro:transitions";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.svelte";
import Breadcrumbs from "../components/Breadcrumbs.astro";
import MetaTags from "../components/MetaTags.astro";

const { pageTitle, pageURL, description } = Astro.props;
---

<!--  -->
<html data-theme="dark" lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <MetaTags
      pageURL={pageURL}
      description={description}
      pageTitle={pageTitle}
    />
    <title>{pageTitle}</title>
    <ViewTransitions />

    <script
      is:inline
      src="https://kit.fontawesome.com/61000256a0.js"
      crossorigin="anonymous"></script>
  </head>
  <body class="bg-gray-950/95">
    <Header />

    <section class="mx-auto max-w-6xl py-12">
      <div class="container mx-auto px-4">
        <div class="mb-8">
          <h1 class="text-gray-100 text-6xl text-center font-black">
            {pageTitle}
          </h1>
          <hr class="my-4 border-gray-400" />
        </div>
        <div class="text-blue-200">
          <slot />
        </div>
      </div>
    </section>

    <Footer />
  </body>
</html>
