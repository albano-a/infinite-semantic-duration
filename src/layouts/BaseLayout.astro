---
import "../styles/global.css";
import { ViewTransitions } from "astro:transitions";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import Breadcrumbs from "../components/Breadcrumbs.astro";
import MetaTags from "../components/MetaTags.astro";

const { pageTitle, pageURL, description } = Astro.props;
---

<!-- data-theme="dark" -->
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <MetaTags
      pageURL={pageURL}
      description={description}
      pageTitle={pageTitle}
    />
    <title>{pageTitle}</title>
    <ViewTransitions />

    <script
      is:inline
      src="https://kit.fontawesome.com/61000256a0.js"
      crossorigin="anonymous"
    ></script>
  </head>
  <body class="has-background-primary">
    <Header />

    <section class="section">
      <div class="container">
        <div class="content">
          <h1
            class="has-text-text-light is-size-1 has-text-centered has-text-weight-black"
          >
            {pageTitle}
          </h1>
          <hr />
        </div>
        <div class="content has-text-primary-light">
          <slot />
        </div>
      </div>
    </section>

    <Footer />
  </body>
</html>
