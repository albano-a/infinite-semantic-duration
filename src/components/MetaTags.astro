---

const { pageURL, description, pageTitle } = Astro.props;

---


<link rel="icon" type="image/svg+xml" href="/ISD.svg" />

<meta name="description" content={description} />
<meta
  name="keywords"
  content="geophysics, programming, development, python, blog"
/>
<meta name="author" content="Andre Albano" />
<meta name="generator" content={Astro.generator} />

<!-- Open Graph / Facebook -->
<meta property="og:type" content="website" />
<meta
  property="og:url"
  content={pageURL}
/>
<meta property="og:title" content={pageTitle} />
<meta
  property="og:description"
  content={description}
/>
<meta property="og:image" content="/ISD.svg" />

<!-- Twitter -->
<meta property="twitter:card" content="/Infinite Semantic Duration.svg" />
<meta
  property="twitter:url"
  content={pageURL}
/>
<meta property="twitter:title" content={pageTitle} />
<meta
  property="twitter:description"
  content={description}
/>
<meta property="twitter:image" content="/ISD.svg" />
