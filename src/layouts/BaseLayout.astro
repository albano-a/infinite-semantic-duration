---
import "../styles/global.css";
import { ViewTransitions } from "astro:transitions";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import Breadcrumbs from '../components/Breadcrumbs.astro';

const { pageTitle } = Astro.props;
---

<!-- data-theme="dark" -->
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/ISD.svg" />
    <meta name="viewport" content="width=device-width" />
    <meta name="description" content="Blog about Geophysics and Programming" />
    <meta
      name="keywords"
      content="geophysics, programming, development, python, blog"
    />
    <meta name="author" content="Andre Albano" />
    <meta name="generator" content={Astro.generator} />
    <title>{pageTitle}</title>
    <ViewTransitions />
    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website" />
    <meta
      property="og:url"
      content="https://infinite-semantic-duration.netlify.app/"
    />
    <meta property="og:title" content="Infinite Semantic Duration" />
    <meta
      property="og:description"
      content="Blog about Geophysics and Programming"
    />
    <meta property="og:image" content="/ISD.svg" />

    <!-- Twitter -->
    <meta property="twitter:card" content="/Infinite Semantic Duration.svg" />
    <meta
      property="twitter:url"
      content="https://infinite-semantic-duration.netlify.app/"
    />
    <meta property="twitter:title" content="Infinite Semantic Duration" />
    <meta
      property="twitter:description"
      content="Blog about Geophysics and Programming"
    />
    <meta property="twitter:image" content="/ISD.svg" />
  </head>
  <body class="has-background-primary">
    <Header />
    

    <section class="section">
      <div class="container">
        <div class="content">
          <h1 class="has-text-text-light is-size-1 has-text-centered has-text-weight-black">
            {pageTitle}
          </h1>
          <hr />
        </div>
        <div class="content has-text-primary-light">
          <slot />
        </div>
      </div>
    </section>

    <Footer />
  </body>
</html>
